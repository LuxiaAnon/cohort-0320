<main class="page">

  <form class="form" autocomplete="off" action="/movies/{{movie._id}}/edit" method="POST">
    <h2 class="title">Editing: {{movie.title}}</h2>

    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" value="{{movie.title}}">
    </div>

    <div class="form-group">
      <label for="genre">Genre</label>
      <input type="text" id="genre" name="genre" value="{{movie.genre}}">
    </div>

    <div class="form-group">
      <label for="plot">Plot</label>
      <textarea name="plot" id="plot" cols="30" rows="10">{{movie.plot}}</textarea>
    </div>

    <button class="btn-submit">Submit</button>
  </form>
</main>